<%= form_tag '/item_types/create_item_type' do %>

  <div class="form-group col-xs-12">
    <%=label_tag 'name', "Name", class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%=text_field_tag 'name', "", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= label_tag 'Base Fee', "Base Fee", class: 'control-label col-xs-2'  %>
    <div class="col-xs-6">
      <%= text_field_tag 'base_fee', "", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= label_tag 'Fee Per Day', "Fee Per Day", class: 'control-label col-xs-2'  %>
    <div class="col-xs-6">
      <%= text_field_tag 'fee_per_day', "", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= submit_tag 'Submit', class: "btn btn-primary" %>
      <%= link_to 'Back', :back, class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
