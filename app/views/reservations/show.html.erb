<% provide( :page_header, "Reservation ID: #{@reservation.reservation_id}" ) %>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Reservation Type</label>
  <div class="form-control-information col-xs-10"><%= @reservation.reservation_type %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Item Type</label>
  <div class="form-control-information col-xs-10"><%= @reservation.item_type.name %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Start Time</label>
  <div class="form-control-information col-xs-10"><%= @reservation.start_time.to_date %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">End Time</label>
  <div class="form-control-information col-xs-10"><%= @reservation.end_time.to_date %></div>
</div>

<div class="form-group col-xs-12">
  <div class="col-xs-offset-2 col-xs-10">
    <%= link_to 'Edit Reservation', edit_reservation_path(@reservation), class: "btn btn-primary" %>
    <%= link_to 'Back', :back, class: "btn btn-default" %>
  </div>
</div>
