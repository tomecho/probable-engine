<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Spire</th>
      <th>Department</th>
      <th class="min-width">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.user.first_name %></td>
        <td><%= user.user.last_name %></td>
        <td><%= user.user.spire_id %></td>
        <td><%= user.user.department.try(:name) %></td>
        <td class="min-width">
          <%= render partial: 'actions', locals: { group: @group, user: user } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
